<script>
const chat = document.getElementById("chat");

// Dicion√°rio b√°sico
const dicionario = {
  "amor": "Sentimento de carinho, afeto e cuidado.",
  "vida": "Conjunto de caracter√≠sticas dos seres vivos.",
  "computador": "M√°quina eletr√¥nica que processa informa√ß√µes.",
  "internet": "Rede mundial de computadores.",
  "matem√°tica": "Ci√™ncia dos n√∫meros e c√°lculos.",
  "hist√≥ria": "Estudo dos acontecimentos do passado.",
  "geografia": "Estudo da Terra e dos lugares."
};

// Perguntas e respostas
const conhecimento = {
  "capital do brasil": "A capital do Brasil √© Bras√≠lia.",
  "quem descobriu o brasil": "Pedro √Ålvares Cabral em 1500.",
  "quantos estados tem o brasil": "O Brasil tem 26 estados e 1 Distrito Federal.",
  "maior planeta": "O maior planeta √© J√∫piter.",
  "menor planeta": "O menor planeta √© Merc√∫rio.",
  "quem foi jesus": "Figura religiosa central do cristianismo.",
  "o que √© ia": "IA √© Intelig√™ncia Artificial, programa que simula intelig√™ncia humana."
};

function send() {
  let input = document.getElementById("userInput").value.toLowerCase();
  document.getElementById("userInput").value = "";

  chat.innerHTML += `<div class="user">Voc√™: ${input}</div>`;
  let resposta = processar(input);
  chat.innerHTML += `<div class="bot">IA: ${resposta}</div>`;
  chat.scrollTop = chat.scrollHeight;
}

function processar(msg) {

  // Cumprimentos
  if (msg.includes("oi") || msg.includes("ol√°") || msg.includes("ola")) {
    return "Ol√°! Sou sua IA em portugu√™s. Posso responder perguntas e fazer c√°lculos.";
  }

  // Tabuada
  if (msg.startsWith("tabuada")) {
    let n = parseInt(msg.replace("tabuada","").trim());
    if (isNaN(n)) return "Digite assim: tabuada 5";
    let r = "";
    for (let i=1;i<=10;i++) {
      r += `${n} x ${i} = ${n*i} | `;
    }
    return r;
  }

  // Raiz quadrada
  if (msg.startsWith("raiz")) {
    let n = parseFloat(msg.replace("raiz","").trim());
    if (isNaN(n)) return "Digite: raiz 16";
    return "Resultado: " + Math.sqrt(n);
  }

  // Pot√™ncia
  if (msg.includes("^")) {
    let p = msg.split("^");
    return "Resultado: " + Math.pow(p[0], p[1]);
  }

  // Porcentagem
  if (msg.includes("%")) {
    let n = parseFloat(msg.replace("%",""));
    return `${n}% = ${n/100}`;
  }

  // Matem√°tica geral
  if (msg.match(/[0-9+\-*/().]/)) {
    try {
      return "Resultado: " + eval(msg);
    } catch {
      return "Erro ao calcular.";
    }
  }

  // Dicion√°rio
  if (msg.startsWith("defina")) {
    let palavra = msg.replace("defina","").trim();
    return dicionario[palavra] || "N√£o tenho essa palavra no dicion√°rio.";
  }

  // Conhecimento
  if (conhecimento[msg]) return conhecimento[msg];

  return "Ainda estou aprendendo. Pergunte matem√°tica, tabuada, hist√≥ria, geografia ou defina uma palavra.";
}

